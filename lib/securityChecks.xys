	/*	 Return 1 if folder is a tv season release	*/
	function isFolderTvRelease($folder){
		if(regexmatches($folder, $regexTVRelease) != ""){
			return 1;
		}
		else{
			return 0;
		}
	}
	
	//Checks if TV folder is in correct directory
	function isTV($path){
		if(regexmatches($path, $regexTVpath) != ""){
			return 1;
		}
		else{
			//msg "Not in TV";
			return 0;
		}
	}
	//Checks if Movie folder is in correct directory
